{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/users-config": ["libs/users/config/src/index.ts"],
      "@project/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/file-uploader": ["libs/file-vault/file-uploader/src/index.ts"],
      "@project/file-vault-config": ["libs/file-vault/config/src/index.ts"],
      "@project/interceptors": ["libs/shared/interceptors/src/index.ts"],
      "@project/pipes": ["libs/shared/pipes/src/index.ts"],
      "@project/shared-client": ["libs/shared/core/src/index-client.ts"],
      "@project/shared-core": ["libs/shared/core/src/index.ts"],
      "@project/shared-helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/training": ["libs/trainings/training-catalog/src/index.ts"],
      "@project/training-comment": [
        "libs/trainings/training-comment/src/index.ts"
      ],
      "@project/training-order": ["libs/trainings/training-order/src/index.ts"],
      "@project/training-config": ["libs/trainings/config/src/index.ts"],
      "@project/training-models": ["libs/trainings/models/src/index.ts"],
      "@project/user": ["libs/users/user/src/index.ts"],
      "@project/friend": ["libs/users/friend/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
